<%- include("partials/header"); %> 

<h1>Compose</h1>

<form action="/compose" method="POST">
  <div class="mb-3">
    <label for="titleInput" class="form-label">Title</label>
    <input type="text" class="form-control" id="titleInput" name="titleCompose" required>
  </div>
  <br>
  <div class="mb-3">
    <label for="textInput" class="form-label">Post</label>
    <textarea class="form-control" id="textInput" name="postCompose" rows="3" required></textarea>
  </div>
  <br>
  <button class="btn btn-dark" type="submit" autocomplete="off">Publish</button>
</form>

<%- include("partials/footer"); %> 